{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "ES2021" ],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitOverride": true,
		"strict": true,
		"target": "ES2021",
		
		"outDir": "dist"
	},
	"include": [ "src" ]
}
